<link rel="stylesheet" href="/css/cssfile.css">

<div class="logo">
  <a href='/'>
    <img src="/img/logo.png">
  </a>
</div>

<% if @logged_in %>
  <div style="float: right;">
    <form action='/sessions' method="post">
      <input type="hidden" name="_method" value="DELETE">
        <input type="submit" value="Logout"/>
    </form>
  </div>
  <div style="float: right;">
    <form action='/listings' method="get">
        <input type="submit" value="Back to listings"/>
    </form>
  </div>
<% else %>
  <div style="float: right;">
    <form action='/users/new' method='get'>
        <input type="submit" value="Sign Up"/>
    </form>

    <form action='/sessions/new' method='get'>
        <input type="submit" value="Login"/>
    </form>
  </div>
<% end %>
<br style="font-size:34px"> </br>

<% flash.keys.each do |type| %>
  <div data-alert class="flash <%= type %> alert-box radius">
    <%= flash[type] %>
    <a href="#" class="close">&times;</a>
  </div>
<% end %>

<% @listings.each do |listing| %>
  <a href="/listings/<%= listing.id %>">
    <section class="space">
      <div class="image">
        <img src="/img/apartment.jpg">
      </div>
      <div class="listing_details">
        <h1><%= Listings.click(id: listing.listing_id)[0].name %></h1>
        <h2><%= Listings.click(id: listing.listing_id)[0].description %></h2>
      </div>
      <div class="listing_price">
        <h3>Total: Â£<%= '%.2f' % (Listings.click(id: listing.listing_id)[0].price.to_f * (DateTime.parse(listing.check_out) - DateTime.parse(listing.check_in)).to_i).round(2)%></h3>
      </div>
      <div class='listing_details_small'>
        <h5><%= Listings.click(id: listing.listing_id)[0].location %></h5>
        <h4>Check in: <%= listing.check_in %>, Check out: <%= listing.check_out %></h4>
      </div>
    </section></a>

<% end %>
