<link rel="stylesheet" href="/css/cssfile.css">

<div class="logo">
  <a href='/'>
    <img src="/img/logo.png">
  </a>
</div>

<form action='/sessions/new' method='get'>
    <label>Are you an existing user?</label>
    <input type="submit" value="Login"/>
</form>

<form action='/listings' method='get'>
    <label>View all listings</label>
    <input type="submit" value="View Listings"/>
</form>

<br><br>
<div class="new_listing_form">
  <h1 class="welcome">Sign Up<h1>
  <form action='/users' method='post'>
      <input type="text" name="email" required="required" placeholder="email address"/><br><br>
      <input type="password" name="password" required="required" placeholder="password"/><br><br>
       <input type="password" placeholder="Confirm Password" name="confirm_pass" required><br><br>
       <input class="textbox-n" type="text" onfocus="(this.type='date')" id="date" placeholder="DOB" name="day" required="required" max="<%= "#{DateTime.new(DateTime.now.year - 18, DateTime.now.month, DateTime.now.day).strftime("%Y-%m-%d")}" %>"><br><br>
      <input type="submit" value="Submit"/>
  </form>

  <% flash.keys.each do |type| %>
    <div data-alert class="flash <%= type %> alert-box radius">
      <%= flash[type] %>
      <a href="#" class="close">&times;</a>
    </div>
  <% end %>
</div>
