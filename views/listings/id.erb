<link rel="stylesheet" href="/css/cssfile.css">

<div class="logo">
  <a href='/'>
    <img src="/img/logo.png">
  </a>
</div>

<% if @logged_in %>
  <div style="float: right;">
    <form action='/sessions' method="post">
      <input type="hidden" name="_method" value="DELETE">
        <input type="submit" value="Logout"/>
    </form>
  </div>

  <div style="display: flex;">
    <form action='/listings' method='get'>
        <input type="submit" value="View Listings"/>
    </form>
  </div>


<% else %>
  <div style="float: right;">
    <form action='/users/new' method='get'>
        <input type="submit" value="Sign Up"/>
    </form>

    <form action='/sessions/new' method='get'>
        <input type="submit" value="Login"/>
    </form>
  </div>

  <div style="display: flex;">
    <form action='/listings' method='get'>
        <input type="submit" value="View Listings"/>
    </form>
  </div>

<% end %>

<div>
  <h2>You are viewing:</h2>
  <% @clicked_listing.each do |listing| %>
       <%= listing.name %> <br> <%= listing.location %>
       <br><br>
       <%= listing.description %>
       <br><br>
       <img src="/img/apartment.jpg">
       <br><br>
       Price per night: Â£<%= listing.price %>
       <br><br>
       Availability: <%= listing.available_from %> to <%= listing.available_to %>,
  <% end %>

</div>

<br>

<form action ='/listings/:id' method='post'>
<input type="hidden" name="listing_id" value="<%= @clicked_listing[0].id %>">
Check-in:<input type='date' name='date1' min="<%= @clicked_listing[0].available_from %>" max="<%= @clicked_listing[0].available_to  %>" required />
Check-out:<input type='date' name='date2' min="<%= @clicked_listing[0].available_from%>" max="<%= @clicked_listing[0].available_to  %>" required />
<input type='submit' value='Book'>
</form>

<% flash.keys.each do |type| %>
  <div data-alert class="flash <%= type %> alert-box radius">
    <%= flash[type] %>
    <a href="#" class="close">&times;</a>
  </div>
<% end %>
