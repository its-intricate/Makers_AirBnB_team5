<% if @logged_in %>
  <div style="float: right;">
    <form action='/sessions' method="post">
      <input type="hidden" name="_method" value="DELETE">
        <input type="submit" value="Logout"/>
    </form>
  </div>

  <div style="display: flex;">
    <form action='/listings' method='get'>
        <input type="submit" value="View Listings"/>
    </form>
  </div>


<% else %>
  <div style="float: right;">
    <form action='/users/new' method='get'>
        <input type="submit" value="Sign Up"/>
    </form>

    <form action='/sessions/new' method='get'>
        <input type="submit" value="Login"/>
    </form>
  </div>

  <div style="display: flex;">
    <form action='/listings' method='get'>
        <input type="submit" value="View Listings"/>
    </form>
  </div>

<% end %>

<h2>You are viewing:</h2>
<% @clicked_listing.each do |listing| %>
     <%= listing.name %>,
     <%= listing.description %>,
     <%= listing.price %>,
     <%= listing.available_from %>,
     <%= listing.available_to %>,
     <%= listing.location %>
<% end %>

<form action ='/listings/:id' method='post'>
<input type="hidden" name="listing_id" value="<%= @clicked_listing[0].id %>">
Check-in:<input type='date' name='date1' min="<%= @clicked_listing[0].available_from %>" max="<%= @clicked_listing[0].available_to  %>" required />
Check-out:<input type='date' name='date2' min="<%= @clicked_listing[0].available_from%>" max="<%= @clicked_listing[0].available_to  %>" required />
<input type='submit' value='Book'>
</form>

<% flash.keys.each do |type| %>
  <div data-alert class="flash <%= type %> alert-box radius">
    <%= flash[type] %>
    <a href="#" class="close">&times;</a>
  </div>
<% end %>
